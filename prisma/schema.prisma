  id        String   @id @default(uuid())
  name      String
  order     Int?     @default(100)
  cityId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  city      City      @relation(fields: [cityId], references: [id], onDelete: Cascade)
  addresses Address[]

  @@map("neighborhoods")
}

/**
